{
  "env": {
    // includes some random global vars like "name" (name of the window I guess)
    //"browser": true,
    "node": false
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019
  },
  "rules": {
    "for-direction": "error",
    "semi": ["error", "always"],
    "valid-typeof": "error",
    "no-invalid-this": "error",
    "no-octal": "error",
    "no-return-await": "error",
    "no-unmodified-loop-condition": "error",
    "no-warning-comments": "warn",
    "no-undef": "error"
  },
  "globals": {
    // browser-specific
    "window": false,
    "document": false,
    "fetch": false,
    "URL": false,
    "URLSearchParams": false,
    "Option": false,

    // webpack
    "require": false,

    "console": false,
    "setTimeout": false,
    "clearTimeout": false,
    "setInterval": false,
    "clearInterval": false,
    "alert": false,

    "Promise": false,
    "Set": false,
    "Proxy": false
  }
}
